<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para um texto normal -->
    <style name="Texto">
        <item name="android:textColor">#000000</item> <!-- Cor do texto (preto) -->
        <item name="android:textSize">16sp</item> <!-- Tamanho do texto (16sp) -->
        <item name="android:textStyle">normal</item> <!-- Estilo de texto (normal) -->
    </style>

    <!-- Estilo para um texto em negrito -->
    <style name="Negrito">
        <item name="android:textColor">#000000</item> <!-- Cor do texto (preto) -->
        <item name="android:textSize">16sp</item> <!-- Tamanho do texto (16sp) -->
        <item name="android:textStyle">bold</item> <!-- Estilo de texto (negrito) -->
    </style>

        <!-- Estilo para um texto grande e chamativo -->
        <style name="Chamativo">
            <item name="android:textColor">#000000</item> <!-- Cor do texto (vermelho) -->
            <item name="android:textSize">24sp</item> <!-- Tamanho do texto (24sp) -->
            <item name="android:textStyle">bold</item> <!-- Estilo de texto (negrito) -->
        </style>

</resources>
